<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#EDE1E1"
    android:layout_marginBottom="2dp"
    android:padding="16dp">
    <CheckBox
        android:id="@+id/cartCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/item_image_cart"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:src="@drawable/item_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        <TextView
            android:id="@+id/item_price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:text="$0.00"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">




            <ImageButton
                android:id="@+id/minus_button_cart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_remove"
                android:contentDescription="@string/minus_button"/>


            <TextView
                android:id="@+id/item_quantity_cart"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <ImageButton
                android:id="@+id/plus_button_cart"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/plus_button"
                android:src="@drawable/ic_plus" />
<!--            <TextView-->
<!--                android:id="@+id/item_price_cart2"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="$0.00"-->
<!--                android:textColor="#FF5722"-->
<!--                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />-->


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
